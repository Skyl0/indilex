# Navigation

temp.navi = COA
temp.navi {
  
  20 = TEXT
  20.value = <ul>
  90 = TEXT
  90.value = </ul>
  
  30 = HMENU
  30.special = list
  30.special.value = 2,3,4,5,6
  30.1 = TMENU
  30.1 {
    NO = 1
    NO {
      allWrap = <li>|</li>
    }

    ACT = 1
    ACT {
      allWrap = <li id="current">|</li>
    }
  }
}

